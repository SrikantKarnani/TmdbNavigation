		<item name="colorPrimaryDark">@color/blue_grey_900</item>
		<item name="android:windowBackground">@color/blue_grey_1000</item>
		<item name="bottomNavStyle">@style/BottomNavStyleDark</item>
		<item name="android:windowLightStatusBar">false</item>
