<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/grey_3</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:fontFamily">@font/flaticon</item>
		<item name="bottomNavStyle">@style/BottomNavStyleLight</item>
		<item name="editTextStyle">@style/EditText.Grey</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:dialogTheme">@style/Dialog.Theme</item>
		
		<!--<item name="cardViewStyle">@style/CardView.Light</item>-->
	</style>
	
